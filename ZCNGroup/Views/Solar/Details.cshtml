@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
    <head>
    @section Styles {
        <link rel="stylesheet" href="~/css/solar_detay.css" />
    }
    </head>



<body>
    <div class="solar-detail-page">
        <div class="detail-container" style="padding-top: 40px;">
            <div class="system-selector">
                <button class="system-btn" onclick="changeSystem('arazi')">Arazi Sistemleri</button>
                <button class="system-btn" onclick="changeSystem('carport')">Carport Sistemleri</button>
                <button class="system-btn" onclick="changeSystem('cati')">Çatı Sistemleri</button>
                <button class="system-btn" onclick="changeSystem('depolama')">Enerji Depolama</button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="detail-container">
            <!-- Hero Image -->
            <div class="hero-image animate-in">
                <img id="heroImage" src=/images/carport.png alt="Solar Sistem">
            </div>

            <div class="content-grid">
                <!-- Main Content -->
                <div class="main-content">
                    <div id="mainContent">
                        <h2>Sistem Bilgisi</h2>
                        <p>İçerik yükleniyor...</p>
                    </div>

                    <!-- Technical Specs -->
                    <div class="tech-specs" id="techSpecs">
                        <h3>Teknik Detaylar</h3>
                        <div class="specs-grid"></div>
                    </div>

                    <!-- Features -->
                    <div class="features" id="features">
                        <h3>Avantajları</h3>
                        <div class="features-grid"></div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="sidebar">
                    <div class="info-card">
                        <h3>📋 Hızlı Bilgiler</h3>
                        <ul id="quickInfo"></ul>
                    </div>

                    <div class="contact-card">
                        <h3>Teklif Alın</h3>
                        <p>Projeniz için ücretsiz keşif ve detaylı fiyat teklifi almak ister misiniz?</p>
                        <a href="#" class="contact-btn">İletişime Geçin</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

