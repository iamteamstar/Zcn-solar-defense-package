                ]
            }
        };

        // URL'den parametreyi oku
        function getSystemFromURL() {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get('system') || 'carport'; // Varsayılan carport
        }

        function changeSystem(systemType) {
            const data = systemData[systemType];
            if (!data) return;

            // Active button güncelle
            document.querySelectorAll('.system-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.textContent.toLowerCase().includes(systemType) ||
                    (systemType === 'depolama' && btn.textContent.includes('Depolama'))) {
                    btn.classList.add('active');
                }
            });

            // Hero image güncelle
            document.getElementById('heroImage').src = data.heroImage;

            // Ana içerik güncelle
            document.getElementById('mainContent').innerHTML = data.content;

            // Teknik özellikler güncelle
            const specsGrid = document.querySelector('.specs-grid');
            specsGrid.innerHTML = '';
            data.techSpecs.forEach(spec => {
                specsGrid.innerHTML += `
                    <div class="spec-item">
                        <h4>${spec.title}</h4>
                        <p>${spec.desc}</p>
                    </div>
                `;
            });

            // Hızlı bilgi güncelle
            const quickInfo = document.getElementById('quickInfo');
            quickInfo.innerHTML = '';
            data.quickInfo.forEach(info => {
                quickInfo.innerHTML += `<li>${info}</li>`;
            });

            // Özellikler güncelle
            const featuresGrid = document.querySelector('.features-grid');
            featuresGrid.innerHTML = '';
            data.features.forEach(feature => {
                featuresGrid.innerHTML += `
                    <div class="feature-card">
                        <div class="feature-icon">${feature.icon}</div>
                        <h4>${feature.title}</h4>
                        <p>${feature.desc}</p>
                    </div>
                `;
            });

            // URL'i güncelle (sayfa yenilenmeden)
            const newUrl = new URL(window.location);
            newUrl.searchParams.set('system', systemType);
            window.history.pushState({}, '', newUrl);

            // Yukarı scroll
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Sayfa yüklendiğinde URL parametresine göre sistemi göster
        document.addEventListener('DOMContentLoaded', function() {
            const systemType = getSystemFromURL();
            changeSystem(systemType);
        });
    </script>
</body>
</html>
  