@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
	<link href="~/css/anasayfa/anasayfaHakkimizda.css" rel="stylesheet" />
	<link href="~/css/anasayfa/anasaydaSlider.css" rel="stylesheet" />
</head>

<!-- Swiper-->
<!-- Start Home Slider Area -->
<div class="home-slider-area">
	<div class="home-slider flickity-dots-absolute" data-flickity='{ "bgLazyLoad": 1, "bgLazyLoad": true, "wrapAround": true, "fade": false, "prevNextButtons": false, "autoPlay": 7000, "pauseAutoPlayOnHover": true }'>
		<div class="home-slider-single-item" data-overlay-dark="0" data-flickity-bg-lazyload="@Url.Content("~/images/ZCN/anasayfa3.png")">
			<div class="container">
				<div class="row d-flex align-items-center justify-content-center">
					<div class="col-12 text-center">
						<div class="home-slider-content">
							<!-- Logo -->
							<div class="logo-container">
								<img src="@Url.Content("~/images/ZCN/logo.png")" alt="ZCN Group Logo" class="slider-logo">
								<h2 class="brand-tagline">Zenith Confidence Nexus</h2>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<style>

</style>
<section class="about-area section-padding">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-md-12">
				<div class="about-content">
					<h3>@Localizer["AboutUs"]</h3>
					<p>
						<b>ZCN Group</b>, @Html.Raw(Localizer["AboutText"].Value)<span class="dots">...</span><a href="/Home/About" class="inline-read-more">
							<span>@Localizer["ReadMore"]</span>
							<svg width="14" height="14" viewBox="0 0 16 16" fill="none">
								<path d="M8 1L15 8L8 15M15 8H1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
							</svg>
						</a>
					</p>
				</div>
			</div>
			<div class="col-lg-6 col-md-12">
				<div class="about-image">
					<img src="~/images/ZCNSTOCKS/index10.png" alt="img">
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	/* Bölüm genel ayarları */
	section.projects-area.section-padding {
		padding-top: 10px !important;
		padding-bottom: 0px !important;
		margin: 0 !important;
		margin-top: -60px !important; /* veya -60px daha da yaklaştırmak için */
	}

	/* Başlık düzenlemesi */
	.section-title h2 {
		color: #00205b !important; /* Koyu lacivert */
		margin-bottom: -40px !important;
		font-weight: 600 !important;
	}

	/* Kart container'ı için eşit boşluk */
	#project-slide .owl-stage-outer {
		padding: 15px 0 !important;
	}

	/* Her bir kart için düzenleme */
	.project-single-item {
		margin: 0 10px !important;
		border-radius: 8px !important;
		overflow: hidden !important;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1) !important;
		transition: transform 0.3s ease, box-shadow 0.3s ease !important;
		height: 360px !important; /* Tüm kartlar aynı yükseklikte */
	}

		.project-single-item:hover {
			transform: translateY(-5px) !important;
			box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
		}

	/* Görseller için düzenleme */
	.project-img {
		height: 260px !important;
		overflow: hidden !important;
		position: relative !important;
	}

		.project-img img {
			width: 100% !important;
			height: 100% !important;
			object-fit: cover !important;
			transition: transform 0.3s ease !important;
		}

	.project-single-item:hover .project-img img {
		transform: scale(1.05) !important;
	}

	/* Overlay bilgi kutusu */
	.project-overlay-info {
		display: flex !important;
		align-items: center !important;
		justify-content: space-between !important;
		padding: 18px 20px !important;
		background: #fff !important;
		height: 100px !important; /* Sabit yükseklik */
		text-decoration: none !important;
		transition: background 0.3s ease !important;
	}

		.project-overlay-info:hover {
			background: #f8f9fa !important;
		}

	/* Kategori (logo + yazı) düzenlemesi */
	.category {
		display: flex !important;
		align-items: center !important;
		gap: 12px !important;
		font-size: 16px !important;
		font-weight: 600 !important;
		color: #00205b !important;
		flex: 1 !important;
	}

	/* Logo ikonları */
	.cat-icon {
		width: 40px !important;
		height: 40px !important;
		object-fit: contain !important;
		flex-shrink: 0 !important; /* Logo boyutu sabit kalsın */
	}

	/* Ok ikonu */
	.project-overlay-info i {
		font-size: 28px !important;
		color: white !important;
		transition: transform 0.3s ease, color 0.3s ease !important;
		margin-left: 10px !important;
		flex-shrink: 0 !important;
	}

	.project-overlay-info:hover i {
		transform: translateX(5px) !important;
		color: #003d82 !important;
	}

	/* Owl Carousel noktalar (dots) */
	.owl-dots {
		margin-top: 30px !important;
		text-align: center !important;
	}

	.owl-dot {
		width: 12px !important;
		height: 12px !important;
		background: #ddd !important;
		border-radius: 50% !important;
		margin: 0 5px !important;
	}

		.owl-dot.active {
			background: #00205b !important;
		
	}
</style>

<section class="projects-area section-padding">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="section-title">
					
					<h2 style="color:darkblue">@Localizer["OurSectors"]</h2>
				</div>
			</div>
			<div class="col-md-12">
				<div id="project-slide" class="owl-carousel owl-theme owl-loaded owl-drag">
					<div class="project-single-item">
						<div class="project-img">
							<img src="~/images/ZCNSTOCKS/savunmaindex.jpg" alt="">
						</div>
						<a href="~/Defense/Index" class="project-overlay-info">
							<span class="category">
								<img src="~/images/ZCN/savunmalogo_favicon.png" class="cat-icon">
                                @Localizer["DefenseIndustry"]
							</span>
							<i class="fa fa-arrow-right"></i>
						</a>
						</div>
					<div class="project-single-item">
						<div class="project-img">
							<img src="~/images/projects/project-1.jpg" alt="">
						</div>
						<a href="~/Solar/Index" class="project-overlay-info">
							<span class="category">
								<img src="~/images/ZCN/yesillogo_favicon.png" class="cat-icon">@Localizer["SolarIndustry"]
							</span>
							@*<h5>House Solar Panel</h5>*@
							<i class="fa fa-arrow-right"></i>
						</a>
					</div>
					<div class="project-single-item">
						<div class="project-img">
							<img src="~/images/ZCNSTOCKS/ambalajindex.jpg" alt="">
						</div>
						<a href="~/Packaging/Index" class="project-overlay-info">
							<span class="category">
								<img src="~/images/ZCN/mavimsilogo_faviocon.png" class="cat-icon">
								@Localizer["PackagingIndustry"]
							</span>
							@*<h5>Ambalaj</h5>*@
							<i class="fa fa-arrow-right"></i>
						</a>
					</div>

				</div>
			</div>
		</div>
	</div>
</section>
